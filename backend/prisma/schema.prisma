generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // provedor
  url      = env("DATABASE_URL") // url do banco
}

// tabela usuario
model Usuarios {
  id    Int    @id @default(autoincrement())
  email String @unique
  senha String
}

model Produtos {
  id        Int     @id @default(autoincrement())
  sku       String
  nome      String  @unique
  valor     Decimal
  descricao String
}
